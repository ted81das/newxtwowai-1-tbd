	"name": "tpgb/tp-expand",
	"version": "0.1.0",
	"title": "Expand",
	"category": "tpgb",
	"description": "Show or Hide complete info on the page, when it cannot be viewed fully on the initial screen using Expand or Read More options",
	"example": {
		"attributes": {}
	},
	"supports": {
		"align": ["wide","full"]
