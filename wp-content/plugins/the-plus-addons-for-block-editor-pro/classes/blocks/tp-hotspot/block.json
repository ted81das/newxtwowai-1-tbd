                    },
                    "tipPadding": {
                        "style": [
                            {
                                "selector": "{{PLUS_WRAP}} {{TP_REPEAT_ID}} .tippy-box{padding: {{tipPadding}};}"
                            }
                        ]
                    },
                    "tipBorder": {
                        "style": [
