{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"name": "tpgb/tp-hotspot",
	"version": "0.1.0",
	"title": "Hotspot",
	"category": "tpgb",
	"description": "Make your images interactive, and display more details for your viewers.",
	"example": {
		"attributes": {}
	},
	"supports": {
		"align": ["wide","full"]
	},
	"textdomain": "tpgb",
    "attributes": {
        "block_id": {
            "type": "string",
            "default": ""
        },
        "hotspotImage": {
            "type": "object",
            "default": {
                "url": ""
            }
        },
        "imageSize": {
            "type": "string",
            "default": "full"
        },
        "pinlistRepeater": {
            "type": "array",
            "repeaterField": [
                {
                    "pinType": {
                        "type": "string",
                        "default": "icon"
                    },
                    "pinIconType": {
                        "type": "string",
                        "default": "font_awesome"
                    },
                    "pinIcon": {
                        "type": "string",
                        "default": "fas fa-plus"
                    },
                    "pinImage": {
                        "type": "object",
                        "default" : {
                            "url" : ""
                        }
                    },
                    "pinText": {
                        "type": "string",
                        "default": "Pin"
                    },
                    "DleftAuto": {
                        "type": "boolean",
                        "default": true
                    },
                    "DrightAuto": {
                        "type": "boolean",
                        "default": false
                    },
                    "DtopAuto": {
                        "type": "boolean",
                        "default": true
                    },
                    "DbottomAuto": {
                        "type": "boolean",
                        "default": false
                    },
                    "TabRespo": {
                        "type": "boolean",
                        "default": false
                    },
                    "itemTooltip": {
                        "type": "boolean",
                        "default": true
                    },
                    "tooltipContentType": {
                        "type": "string",
                        "default": "text"
                    },
                    "tooltipText": {
                        "type": "string",
                        "default": "Your content will be here."
                    },
                    "piniconColor": {
                        "type": "string",
                        "default": "",
                        "style": [
                            {
                                "selector": "{{PLUS_WRAP}} {{TP_REPEAT_ID}} .pin-hotspot-wrapper .pin-icon{color:{{piniconColor}};}"
                            }
                        ]
                    },
                    "pinBgcolor": {
                        "type": "string",
                        "default": "",
                        "style": [
                            {
                                "selector": "{{PLUS_WRAP}} {{TP_REPEAT_ID}} .pin-hotspot-wrapper .pin-content {background:{{pinBgcolor}};}"
                            }
                        ]
                    },
                    "piniconHvrColor": {
                        "type": "string",
                        "default": "",
                        "style": [
                            {
                                "selector": "{{PLUS_WRAP}} {{TP_REPEAT_ID}} .pin-hotspot-wrapper:hover .pin-icon {color:{{piniconHvrColor}};}"
                            }
                        ]
                    },
                    "pinHvrBgcolor": {
                        "type": "string",
                        "default": "",
