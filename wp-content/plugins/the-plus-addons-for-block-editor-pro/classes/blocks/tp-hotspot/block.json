                        "style": [
                            {
                                "selector": "{{PLUS_WRAP}} {{TP_REPEAT_ID}} .tippy-box .tippy-content"
                            }
                        ]
                    },
                    "tooltipColor": {
                        "type": "string",
                        "default": "",
