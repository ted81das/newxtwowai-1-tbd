                            {
                                "selector": "{{PLUS_WRAP}} {{TP_REPEAT_ID}} .pin-hotspot-wrapper:hover .pin-content{background:{{pinHvrBgcolor}};}"
                            }
                        ]
                    },
                    "leftPos": {
                        "type": "string",
                        "default": 20,
                        "style": [
                            {
                                "condition": [
                                    {
                                        "key": "DleftAuto",
                                        "relation": "==",
                                        "value": true
                                    }
                                ],
                                "selector": "{{PLUS_WRAP}} {{TP_REPEAT_ID}} {left:{{leftPos}}%;}"
                            }
                        ]
                    },
                    "righttPos": {
                        "type": "string",
                        "style": [
                            {
                                "condition": [
                                    {
                                        "key": "DrightAuto",
                                        "relation": "==",
                                        "value": true
                                    }
                                ],
                                "selector": "{{PLUS_WRAP}} {{TP_REPEAT_ID}} {right:{{righttPos}}%;}"
                            }
