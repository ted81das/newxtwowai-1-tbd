        "carobtn": {
            "type": "boolean",
            "default": true
        },
        "remType": {
            "type": "string",
            "default": "carousel"
        },
        "btntxt1": {
            "type": "string",
            "default": "Prev"
        },
        "btntxt2": {
            "type": "string",
            "default": "Next"
        },
        "rbtnAlign": {
            "type": "string",
            "default": "text-left",
