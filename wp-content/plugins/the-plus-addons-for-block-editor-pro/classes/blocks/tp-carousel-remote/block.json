	"name": "tpgb/tp-carousel-remote",
	"version": "0.1.0",
	"title": "Carousel Remote",
	"category": "tpgb",
	"description": "Connect any carousel using unique id to trigger carousel motion",
	"example": {
		"attributes": {}
	},
	"supports": {
		"align": ["wide","full"]
	},
	"textdomain": "tpgb",
